<ContentDialog x:Name="NewBoard"
    x:Class="Sudoku.NewBoardDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sudoku"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="New Board"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="NewBoardDialog_PrimaryButtonClick"
    SecondaryButtonClick="NewBoardDialog_SecondaryButtonClick">

    <Grid>
        <ComboBox x:Name="LevelComboBox" Width="270" HorizontalAlignment="Center">
            <ComboBoxItem x:Name="ItemSimple" Content="Simple" IsSelected="True"/>
            <ComboBoxItem x:Name="ItemEasy" Content="Easy"/>
            <ComboBoxItem x:Name="ItemMedium" Content="Medium"/>
            <ComboBoxItem x:Name="ItemHard" Content="Hard"/>
        </ComboBox>
    </Grid>
</ContentDialog>
